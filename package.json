{
    "name": "go-module-loader",
    "version": "0.0.1",
    "description": "Compiles .go files to easy to use modules",
    "main": "lib/loader/index.js",
    "author": "Oscar Persson",
    "license": "MIT",
    "private": true,
    "repository": {
        "url": "https://github.com/opkna/go-module-loader"
    },
    "scripts": {
        "pretest": "babel src --out-dir lib --extensions '.tsx,.ts,.js' && webpack -c test/test_pkg/webpack.config.js",
        "test": "jest",
        "prebuild": "rimraf types lib",
        "build": "babel src --out-dir lib --extensions '.tsx,.ts,.js'",
        "postbuild": "tsc -p . --emitDeclarationOnly"
    },
    "dependencies": {
        "rimraf": "^3.0.2"
    },
    "devDependencies": {
        "@babel/cli": "^7.12.8",
        "@babel/core": "^7.12.9",
        "@babel/plugin-proposal-class-properties": "^7.12.1",
        "@babel/plugin-transform-modules-commonjs": "^7.12.1",
        "@babel/preset-typescript": "^7.12.7",
        "@types/express": "^4.17.9",
        "@types/jest": "^26.0.16",
        "@types/node": "^14.14.10",
        "@types/puppeteer": "^5.4.1",
        "@types/rewire": "^2.5.28",
        "@types/rimraf": "^3.0.0",
        "@types/serve-static": "^1.13.8",
        "@types/webpack": "^4.41.25",
        "express": "^4.17.1",
        "html-webpack-plugin": "^4.5.0",
        "jest": "^26.6.3",
        "jest-puppeteer": "^4.4.0",
        "puppeteer": "^5.5.0",
        "rewire": "^5.0.0",
        "serve-static": "^1.14.1",
        "ts-node": "^9.1.0",
        "typescript": "^4.1.2",
        "webpack": "^5.10.0",
        "webpack-cli": "^4.2.0"
    },
    "prettier": {
        "tabWidth": 4,
        "singleQuote": true
    },
    "babel": {
        "plugins": [
            "@babel/plugin-proposal-class-properties",
            "@babel/plugin-transform-modules-commonjs"
        ],
        "presets": [
            "@babel/preset-typescript"
        ]
    }
}
